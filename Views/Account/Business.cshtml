@{
   Layout = "_Register_Login";
}

@using CleverStoreManager.Models
@model CleverStoreManagerBusiness


<div class="card-body">
   <h3 class="login-box-msg"><b>Business Info</b></h3>
   @using (Html.BeginForm("Business", "Account", FormMethod.Post))
   {
      @Html.AntiForgeryToken()
      @Html.ValidationSummary(true, "", new { @class = "text-danger text-sm" })

      <div class="input-group mb-3">
         @Html.TextBoxFor( model => model.CompanyName, new { @class="form-control", placeholder="CompanyName"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <div class="input-group mb-3">
         @Html.TextBoxFor( model => model.Address1, new { @class="form-control", placeholder="Address1"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <div class="input-group mb-3">
         @Html.TextBoxFor( model => model.Address2, new { @class="form-control", placeholder="Address2"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <div class="input-group mb-3">
         @Html.TextBoxFor( model => model.City, new { @class="form-control", placeholder="City"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <div class="input-group mb-3">
         @Html.TextBoxFor( model => model.Country, new { @class="form-control", placeholder="Country"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <div class="input-group mb-3">
         @Html.TextBoxFor( model => model.PostalCode, new { @class="form-control", placeholder="PostalCode"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <div class="input-group mb-3">
         @Html.TextBoxFor( model => model.CEOFirstName, new { @class="form-control", placeholder="CEOFirstName"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <div class="input-group mb-3">
         @Html.TextBoxFor( model => model.CEOMiddleName, new { @class="form-control", placeholder="CEOMiddleName"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <div class="input-group mb-3">
         @Html.TextBoxFor( model => model.CEOLastName, new { @class="form-control", placeholder="CEOLastName"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <div class="input-group mb-3">
         @Html.TextBoxFor( model => model.CEODateOfBirth, new { @class="form-control", placeholder="CEODateOfBirth", type="date"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <div class="input-group mb-3">
         @Html.DropDownListFor( model => model.CEOGender, new SelectList(Enum.GetValues(typeof(Gender))), "Select Gender", new { @class="form-control"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <div class="input-group mb-3">
         @Html.DropDownListFor( model => model.IdentityType, new SelectList(Enum.GetValues(typeof(IdentityMeans))), "IdentityType", new { @class="form-control"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <div class="input-group mb-3">
         @Html.TextBoxFor( model => model.NoOfEmployee, new { @class="form-control", placeholder="NoOfEmployee", type="number"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <div class="input-group mb-3">
         @Html.TextBoxFor( model => model.CACRegNumber, new { @class="form-control", placeholder="CACRegNumber", type="number"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <div class="input-group mb-3">
         @Html.TextBoxFor( model => model.TaxIDNumber, new { @class="form-control", placeholder="TaxIDNumber", type="number"})
         <div class="input-group-append">
            <div class="input-group-text">
               <span class="fas fa-user"></span>
            </div>
         </div>
      </div>

      <button class="btn btn-outline-primary btn-block" type="submit">Save</button>
   }
</div>